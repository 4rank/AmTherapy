<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/things_view"
    android:background="@color/nat1"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        tools:ignore="MissingConstraints,ScrollViewCount">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_th"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/text_thing"
                style="@style/MyTextStyle"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.044" />


            <ImageView
                android:id="@+id/image_support_cat"
                android:layout_width="match_parent"
                android:layout_height="162dp"
                app:srcCompat="@drawable/things_cat"
                android:contentDescription="@string/todo3" />

            <TextView
                android:id="@+id/text_things"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="60dp"
                android:gravity="center"
                style="@style/MyTextStyle"
                android:text=""
                android:textStyle="italic"
                tools:layout_editor_absoluteX="65dp"
                tools:layout_editor_absoluteY="206dp" />

            <Button
                android:id="@+id/button_thing"
                style="@style/MyTextStyle_button_gem_else"
                android:background="@drawable/custom_but_anti"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="@string/button_thing"
                tools:layout_editor_absoluteX="126dp"
                tools:layout_editor_absoluteY="621dp" />

            <TextView
                android:id="@+id/textViewNon1"
                android:layout_width="62dp"
                android:layout_height="27dp"
                tools:layout_editor_absoluteX="176dp"
                tools:layout_editor_absoluteY="171dp" />


    </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>